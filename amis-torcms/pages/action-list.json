{
  "type": "page",
  "title": "动作管理列表",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    {
      "label": "新增",
      "primary": true,
      "type": "button",
      "actionType": "dialog",
      "icon": "fa fa-plus pull-left",
      "dialog": {
        "title": "新增",
        "body": {
          "type": "form",
          "name": "role-edit-form",
          "api": "post:/api/action/_add",
          "body": [
            {
              "name": "name",
              "label": "动作名称",
              "type": "input-text",
              "required": true
            },
            {
              "name": "action_type",
              "label": "动作类型",
              "type": "input-text",
              "required": true
            },
            {
              "name": "description",
              "label": "动作说明",
              "type": "input-text"
            },
             {
              "name": "process",
              "id": "process",
              "label": "流程：分组/角色",
              "mode": "row",
              "type": "chained-select",
              "source": "/api/role/chainedOptions?parentId=$parentId&level=$level&maxLevel=4",
              "required": true
            },
            {
              "name": "transition",
              "id": "transition",
              "type": "select",
              "label": "所属转换",
              "source": "/api/transition/chainedOptions?pro=${process}",
              "clearable": true,
              "searchable": true,
              "required": true
            }

          ]
        }
      }
    }
  ],
  "body": [
    {
      "type": "crud",
      "draggable": true,
      "perPage": 15,
      "keepItemSelectionOnPageChange": true,
      "maxKeepItemSelectionLength": 10,
      "labelTpl": "${uid} ${name}",
      "api": "/api/action/list",
      "expandConfig": {
        "expand": "all"
      },
      "primaryField": "uid",
      "bulkActions": [
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": "/api/action/batch_delete/${ids|raw}",
          "confirmText": "确定要批量删除?"
        }
      ],
      "filterTogglable": true,
      "headerToolbar": [
        "bulkActions",
        {
          "type": "tpl",
          "tpl": "当前有 ${count} 条数据。",
          "className": "v-middle"
        },
        {
          "type": "columns-toggler",
          "align": "right"
        },
        {
          "type": "drag-toggler",
          "align": "right"
        },
        {
          "type": "pagination",
          "align": "right"
        }
      ],
      "footerToolbar": [
        "statistics",
        "switch-per-page",
        "pagination"
      ],
      "columns": [
        {
          "name": "process",
          "label": "流程：分组/角色",
          "type": "text",
          "value": "${process}"
        },
        {
          "name": "process",
          "label": "所属状态",
          "type": "text",
          "value": "${state}"
        },
        {
          "name": "name",
          "label": "动作名称",
          "type": "text"
        },
        {
          "name": "action_type",
          "label": "动作类型",
          "type": "text"
        },
        {
          "name": "description",
          "label": "动作说明",
          "type": "text"
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "type": "button",
                  "label": "编辑",
                  "level": "info",
                  "icon": "fa fa-pencil",
                  "tooltip": "编辑",
                  "actionType": "drawer",
                  "drawer": {
                    "position": "left",
                    "size": "lg",
                    "title": "编辑",
                    "body": {
                      "type": "form",
                      "name": "role-edit-form",
                      "api": "/api/action/_edit/${uid}",
                      "body": [
                        {
                          "name": "name",
                          "label": "动作名称",
                          "type": "input-text",
                          "value": "${name}"
                        },
                        {
                          "name": "action_type",
                          "label": "动作类型",
                          "type": "input-text",
                          "value": "${action_type}"
                        },
                        {
                          "name": "description",
                          "label": "动作说明",
                          "type": "input-text",
                          "value": "${description}"
                        },
                        {
                          "name": "transition",
                          "id": "transition",
                          "type": "select",
                          "label": "所属转换",
                          "source": "/api/transition/chainedOptions",
                          "clearable": true,
                          "searchable": true,
                          "required": true
                        }
                      ]
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "删除",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "/api/action/_delete/$uid"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}




