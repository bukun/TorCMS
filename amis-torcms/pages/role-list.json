{
  "type": "page",
  "title": "分组/角色管理列表",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    {
      "label": "新增",
      "primary": true,
      "type": "button",
      "actionType": "dialog",
      "icon": "fa fa-plus pull-left",
      "dialog": {
        "title": "新增",
        "body": {
          "type": "form",
          "name": "role-edit-form",
          "api": "post:/api/role/_add",
          "body": [
            {
              "name": "name",
              "label": "分组/角色名称",
              "type": "input-text",
              "required": true
            },
            {
              "name": "status",
              "label": "状态",
              "type": "input-text",
              "required": true
            },
            {
              "name": "pid",
              "id": "pid",
              "label": "parent",
              "mode": "row",
              "type": "chained-select",
              "source": "/api/role/getpid?level=1&maxLevel=1",
              "required": true
            },
            {
              "label": "选择权限",
              "id": "transfer-receiver",
              "type": "transfer",
              "name": "permission",
              "debugger": true,
              "source": "/api/permission/getall"
            },
            {
              "name": "transferEvent1",
              "id": "transferEvent1",
              "type": "action",
              "label": "全选功能",
              "level": "primary",
              "className": "mr-3 mb-3",
              "debugger": true,
              "onEvent": {
                "click": {
                  "actions": [
                    {
                      "actionType": "selectAll",
                      "componentId": "transfer-receiver"
                    }
                  ]
                }
              }
            },
            {
              "name": "transferEvent2",
              "id": "transferEvent2",
              "type": "action",
              "label": "清空功能",
              "level": "primary",
              "className": "mr-3 mb-3",
              "debugger": true,
              "onEvent": {
                "click": {
                  "actions": [
                    {
                      "actionType": "clear",
                      "componentId": "transfer-receiver"
                    }
                  ]
                }
              }
            },
            {
              "type": "action",
              "actionType": "reload",
              "label": "刷新 reload",
              "level": "primary",
              "className": "mr-3 mb-3",
              "target": "transfer"
            }
          ]
        }
      }
    }
  ],
  "body": [
    {
      "type": "crud",
      "draggable": true,
      "perPage": 15,
      "keepItemSelectionOnPageChange": true,
      "maxKeepItemSelectionLength": 11,
      "labelTpl": "${uid} ${name}",
      "name": "sample",
      "api": "/api/role/list",
      "bulkActions": [
        {
          "label": "批量修改",
          "type": "button",
          "actionType": "dialog",
          "level": "primary",
          "dialog": {
            "title": "批量编辑",
            "name": "sample-bulk-edit",
            "body": {
              "type": "form",
              "api": "/api/role/batch_edit",
              "controls": [
                {
                  "type": "hidden",
                  "name": "uid"
                },
                {
                  "type": "text",
                  "name": "status",
                  "label": "状态"
                }
              ]
            }
          }
        },
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": "/api/role/batch_edit",
          "confirmText": "确定要批量删除?"
        }
      ],
      "filterTogglable": true,
      "headerToolbar": [
        "bulkActions",
        {
          "type": "tpl",
          "tpl": "当前有 ${count} 条数据。",
          "className": "v-middle"
        },
        {
          "type": "columns-toggler",
          "align": "right"
        },
        {
          "type": "drag-toggler",
          "align": "right"
        },
        {
          "type": "pagination",
          "align": "right"
        }
      ],
      "footerToolbar": [
        "statistics",
        "switch-per-page",
        "pagination"
      ],
      "columns": [
        {
          "name": "uid",
          "label": "uid",
          "type": "text"
        },
        {
          "name": "name",
          "label": "分组/角色名称",
          "type": "text"
        },
        {
          "name": "status",
          "label": "状态",
          "type": "text"
        },
        {
          "name": "pid",
          "label": "parent id",
          "type": "text"
        },
        {
          "name": "time_create",
          "label": "time_create",
          "type": "text"
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "type": "button",
                  "label": "查看",
                  "level": "primary",
                  "icon": "fa fa-eye",
                  "actionType": "dialog",
                  "tooltip": "查看",
                  "dialog": {
                    "title": "查看",
                    "body": {
                      "type": "form",
                      "body": [
                        {
                          "name": "uid",
                          "label": "uid",
                          "type": "static"
                        },
                        {
                          "name": "name",
                          "label": "分组/角色名称",
                          "type": "static"
                        },
                        {
                          "name": "status",
                          "label": "状态",
                          "type": "static"
                        },
                        {
                          "name": "pid",
                          "label": "parent id",
                          "type": "static"
                        },
                        {
                          "name": "time_create",
                          "label": "创建时间",
                          "type": "static"
                        },
                        {
                          "name": "time_update",
                          "label": "更新时间",
                          "type": "static"
                        }

                      ]
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "修改",
                  "level": "info",
                  "icon": "fa fa-pencil",
                  "tooltip": "编辑",
                  "actionType": "drawer",
                  "drawer": {
                    "position": "left",
                    "size": "lg",
                    "title": "编辑",
                    "body": {
                      "type": "form",
                      "name": "role-edit-form",
                      "api": "/api/role/_edit/${uid}",
                      "body": [
                        {
                          "name": "name",
                          "label": "分组/角色名称",
                          "type": "input-text"
                        },
                        {
                          "name": "status",
                          "label": "状态",
                          "type": "input-text"
                        },
                       {
              "name": "pid",
              "id": "pid",
              "label": "parent",
              "mode": "row",
              "type": "chained-select",
              "source": "/api/role/getpid?level=1&maxLevel=1",
              "required": true
            },
                            {
              "label": "选择权限",
              "id": "transfer-receiver",
              "type": "transfer",
              "name": "permission",
              "debugger": true,
              "source": "/api/permission/getall"
            },
            {
              "name": "transferEvent1",
              "id": "transferEvent1",
              "type": "action",
              "label": "全选功能",
              "level": "primary",
              "className": "mr-3 mb-3",
              "debugger": true,
              "onEvent": {
                "click": {
                  "actions": [
                    {
                      "actionType": "selectAll",
                      "componentId": "transfer-receiver"
                    }
                  ]
                }
              }
            },
            {
              "name": "transferEvent2",
              "id": "transferEvent2",
              "type": "action",
              "label": "清空功能",
              "level": "primary",
              "className": "mr-3 mb-3",
              "debugger": true,
              "onEvent": {
                "click": {
                  "actions": [
                    {
                      "actionType": "clear",
                      "componentId": "transfer-receiver"
                    }
                  ]
                }
              }
            },
            {
              "type": "action",
              "actionType": "reload",
              "label": "刷新 reload",
              "level": "primary",
              "className": "mr-3 mb-3",
              "target": "transfer"
            }
                      ]
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "删除",
                  "icon": "fa fa-times text-danger",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "/api/role/_delete/$uid"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}




