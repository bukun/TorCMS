{
  "type": "page",
  "title": "分组/角色管理列表",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    {
      "type": "button",
      "actionType": "link",
      "link": "/role/add",
      "label": "新增",
      "primary": true
    }
  ],
  "body": [
    {
      "type": "crud",
      "draggable": true,
      "perPage": 15,
      "keepItemSelectionOnPageChange": true,
      "maxKeepItemSelectionLength": 11,

      "orderBy": "id",
      "orderDir": "asc",
      "name": "sample",
      "api": "/api/role/list",
      "bulkActions": [
        {
          "label": "批量修改",
          "type": "button",
          "actionType": "dialog",
          "level": "primary",
          "dialog": {
            "title": "批量编辑",
            "name": "sample-bulk-edit",
            "body": {
              "type": "form",
              "api": "/api/role/batch_edit/${ids|raw}",
              "controls": [
                {
                  "type": "text",
                  "name": "status",
                  "label": "状态"
                },
                 {
                  "type": "text",
                  "name": "ids",
                  "label": "ids"

                }

              ]
            }
          }
        },
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": "/api/role/batch_edit",
          "confirmText": "确定要批量删除?"
        }
      ],
      "filterTogglable": true,
      "headerToolbar": [

      "bulkActions",
      {
        "type": "tpl",
        "tpl": "当前有 ${count} 条数据。",
        "className": "v-middle"
      },

      {
        "type": "columns-toggler",
        "align": "right"
      },
      {
        "type": "drag-toggler",
        "align": "right"
      },
      {
        "type": "pagination",
        "align": "right"
      }
    ],
    "footerToolbar": [
      "statistics",
      "switch-per-page",
      "pagination"
    ],
      "columns": [
        {
          "name": "uid",
          "label": "uid",
          "type": "text"
        },
        {
          "name": "name",
          "label": "分组/角色名称",
          "type": "text"
        },
        {
          "name": "status",
          "label": "状态",
          "type": "text"
        },
        {
          "name": "pid",
          "label": "parent id",
          "type": "text"
        },
         {
          "name": "time_create",
          "label": "time_create",
          "type": "text"
        },

        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "type": "button",
                  "label": "查看",
                  "level": "primary",
                  "actionType": "link",
                  "link": "/role/get/${uid}"
                },
                {
                  "type": "button",
                  "label": "修改",
                  "level": "info",
                  "actionType": "link",
                  "link": "/role/edit/${uid}"
                },
                {
                  "type": "button",
                  "label": "删除",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "/api/role/_delete/$uid"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
