{
  "type": "page",
  "title": "状态转换管理列表",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    {
      "label": "新增",
      "primary": true,
      "type": "button",
      "actionType": "dialog",
      "icon": "fa fa-plus pull-left",
      "dialog": {
        "title": "新增",
        "body": {
          "type": "form",
          "name": "role-edit-form",
          "api": "post:/api/transition/_add",
          "body": [
            {
              "name": "process",
              "id": "process",
              "label": "流程",
              "type": "select",
              "source": "/api/process/chainedOptions",
              "clearable": true,
              "searchable": true,
              "required": true
            },
            {
              "name": "current_state",
              "id": "current_state",
              "type": "select",
              "label": "当前状态",
              "source": "/api/state/chainedOptions?pro=${process}",
              "clearable": true,
              "searchable": true,
              "required": true
            },
            {
              "name": "next_state",
              "id": "next_state",
              "type": "select",
              "label": "下一状态",
              "source": "/api/state/chainedOptions",
              "clearable": true,
              "searchable": true,
              "required": true
            }
          ]
        }
      }
    }
  ],
  "body": [
    {
      "type": "crud",
      "draggable": true,
      "perPage": 15,
      "keepItemSelectionOnPageChange": true,
      "maxKeepItemSelectionLength": 15,
      "labelTpl": "${uid} ${name}",
      "api": "/api/transition/list",
      "expandConfig": {
        "expand": "all"
      },
      "primaryField": "uid",
      "bulkActions": [
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": "/api/transition/batch_delete/${ids|raw}",
          "confirmText": "确定要批量删除?"
        }
      ],
      "filterTogglable": true,
      "headerToolbar": [
        "bulkActions",
        {
          "type": "tpl",
          "tpl": "当前有 ${count} 条数据。",
          "className": "v-middle"
        },
        {
          "type": "columns-toggler",
          "align": "right"
        },
        {
          "type": "drag-toggler",
          "align": "right"
        },
        {
          "type": "pagination",
          "align": "right"
        }
      ],
      "footerToolbar": [
        "statistics",
        "switch-per-page",
        "pagination"
      ],
      "columns": [
        {
          "name": "process",
          "label": "流程",
          "type": "text",
          "value": "${process}"
        },
        {
          "name": "current_state",
          "label": "当前状态",
          "type": "text",
          "required": true
        },
        {
          "name": "next_state",
          "label": "下一状态",
          "type": "text",
          "required": true
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "type": "button",
                  "label": "删除",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "/api/transition/_delete/$uid"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}




