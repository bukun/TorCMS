{
  "type": "page",
  "title": "状态管理列表",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    {
      "label": "新增",
      "primary": true,
      "type": "button",
      "actionType": "dialog",
      "icon": "fa fa-plus pull-left",
      "dialog": {
        "title": "新增",
        "body": {
          "type": "form",
          "name": "role-edit-form",
          "api": "post:/api/state/_add",
          "body": [
            {
              "name": "ext_process0",
              "id": "ext_process0",
              "label": "流程", 
              "type": "select",
              "source": "/api/process/chainedOptions",
              "required": true
            },
            {
              "name": "ext_process1",
              "id": "ext_process1",
              "label": "流程", 
              "type": "select",
              "source": "/api/process/chainedOptions"
            },
            {
              "name": "ext_process2",
              "id": "ext_process2",
              "label": "流程", 
              "type": "select",
              "source": "/api/process/chainedOptions"
            },
            {
              "name": "name",
              "label": "状态名称",
              "type": "input-text",
              "required": true
            },
            {
              "name": "state_type",
              "label": "状态类型",
              "type": "input-text",
              "required": true
            },
            {
              "name": "description",
              "label": "状态说明",
              "type": "input-text"
            }
          ]
        }
      }
    }
  ],
  "body": [
    {
      "type": "crud",
      "draggable": true,
      "perPage": 15,
      "keepItemSelectionOnPageChange": true,
      "maxKeepItemSelectionLength": 10,
      "labelTpl": "${uid} ${name}",
      "api": "/api/state/list",
      "expandConfig": {
        "expand": "all"
      },
      "primaryField": "uid",

      "filterTogglable": true,
      "headerToolbar": [
        "bulkActions",
        {
          "type": "tpl",
          "tpl": "当前有 ${count} 条数据。",
          "className": "v-middle"
        },
        {
          "type": "columns-toggler",
          "align": "right"
        },
        {
          "type": "drag-toggler",
          "align": "right"
        },
        {
          "type": "pagination",
          "align": "right"
        }
      ],
      "footerToolbar": [
        "statistics",
        "switch-per-page",
        "pagination"
      ],
      "columns": [
        {
          "name": "process",
          "label": "流程",
          "type": "text",
          "value": "${process}"
        },
        {
          "name": "name",
          "label": "状态名称",
          "type": "text"
        },
        {
          "name": "state_type",
          "label": "状态类型",
          "type": "text"
        },
        {
          "name": "description",
          "label": "状态说明",
          "type": "text"
        }

      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}




