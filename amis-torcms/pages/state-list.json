{
  "type": "page",
  "title": "状态管理列表",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    {
      "label": "新增",
      "primary": true,
      "type": "button",
      "actionType": "dialog",
      "icon": "fa fa-plus pull-left",
      "dialog": {
        "title": "新增",
        "body": {
          "type": "form",
          "name": "role-edit-form",
          "api": "post:/api/state/_add",
          "body": [
            {
              "name": "ext_process0",
              "id": "ext_process0",
              "label": "流程", 
              "type": "select",
              "source": "/api/process/chainedOptions",
              "required": true
            },
            {
              "name": "ext_process1",
              "id": "ext_process1",
              "label": "流程", 
              "type": "select",
              "source": "/api/process/chainedOptions"
            },
            {
              "name": "ext_process2",
              "id": "ext_process2",
              "label": "流程", 
              "type": "select",
              "source": "/api/process/chainedOptions"
            },
            {
              "name": "name",
              "label": "状态名称",
              "type": "input-text",
              "required": true
            },
            {
              "name": "state_type",
              "label": "状态类型",
              "type": "input-text",
              "required": true
            },
            {
              "name": "description",
              "label": "状态说明",
              "type": "input-text"
            }
          ]
        }
      }
    }
  ],
  "body": [
    {
      "type": "crud",
      "draggable": true,
      "perPage": 15,
      "keepItemSelectionOnPageChange": true,
      "maxKeepItemSelectionLength": 10,
      "labelTpl": "${uid} ${name}",
      "api": "/api/state/list",
      "expandConfig": {
        "expand": "all"
      },
      "primaryField": "uid",
      "bulkActions": [
        {
          "label": "批量编辑",
          "type": "button",
          "actionType": "dialog",
          "level": "primary",
          "dialog": {
            "title": "批量编辑",
            "name": "sample-bulk-edit",
            "body": {
              "type": "form",
              "api": "/api/state/batch_edit",
              "controls": [
                {
                  "type": "hidden",
                  "name": "ids"
                },
                {
                  "name": "ext_process0",
                  "id": "ext_process0",
                  "label": "流程", 
                  "type": "select",
                  "source": "/api/process/chainedOptions",
                  "clearable": true,
                  "searchable": true,
                  "required": true
                },
                {
                  "name": "ext_process1",
                  "id": "ext_process1",
                  "label": "流程", 
                  "type": "select",
                  "source": "/api/process/chainedOptions",
                  "clearable": true,
                  "searchable": true
                },
                {
                  "name": "ext_process2",
                  "id": "ext_process2",
                  "label": "流程", 
                  "type": "select",
                  "source": "/api/process/chainedOptions",
                  "clearable": true,
                  "searchable": true
                }
              ]
            }
          }
        },
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": "/api/state/batch_delete/${ids|raw}",
          "confirmText": "确定要批量删除?"
        }
      ],
      "filterTogglable": true,
      "headerToolbar": [
        "bulkActions",
        {
          "type": "tpl",
          "tpl": "当前有 ${count} 条数据。",
          "className": "v-middle"
        },
        {
          "type": "columns-toggler",
          "align": "right"
        },
        {
          "type": "drag-toggler",
          "align": "right"
        },
        {
          "type": "pagination",
          "align": "right"
        }
      ],
      "footerToolbar": [
        "statistics",
        "switch-per-page",
        "pagination"
      ],
      "columns": [
        {
          "name": "process",
          "label": "流程",
          "type": "text",
          "value": "${process}"
        },
        {
          "name": "name",
          "label": "状态名称",
          "type": "text"
        },
        {
          "name": "state_type",
          "label": "状态类型",
          "type": "text"
        },
        {
          "name": "description",
          "label": "状态说明",
          "type": "text"
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "type": "button",
                  "label": "编辑",
                  "level": "info",
                  "icon": "fa fa-pencil",
                  "tooltip": "编辑",
                  "actionType": "drawer",
                  "drawer": {
                    "position": "left",
                    "size": "lg",
                    "title": "编辑",
                    "body": {
                      "type": "form",
                      "name": "role-edit-form",
                      "api": "/api/state/_edit/${uid}",
                      "body": [
                        {
                          "name": "ext_process0",
                          "id": "ext_process0",
                          "label": "流程", 
                          "type": "select",
                          "source": "/api/process/chainedOptions",
                          "clearable": true,
                          "searchable": true,
                          "required": true
                        },
                        {
                          "name": "ext_process1",
                          "id": "ext_process1",
                          "label": "流程", 
                          "type": "select",
                          "source": "/api/process/chainedOptions",
                          "clearable": true,
                          "searchable": true
                        },
                        {
                          "name": "ext_process2",
                          "id": "ext_process2",
                          "label": "流程", 
                          "type": "select",
                          "source": "/api/process/chainedOptions",
                          "clearable": true,
                          "searchable": true
                        },
                        {
                          "name": "name",
                          "label": "状态名称",
                          "type": "input-text",
                          "value": "${name}"
                        },
                        {
                          "name": "state_type",
                          "label": "状态类型",
                          "type": "input-text",
                          "value": "${state_type}"
                        },
                        {
                          "name": "description",
                          "label": "状态说明",
                          "type": "input-text",
                          "value": "${description}"
                        }
                      ]
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "删除",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "/api/state/_delete/$uid"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}




