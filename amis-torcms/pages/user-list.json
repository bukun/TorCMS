{
  "type": "page",
  "title": "用户列表",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    {
      "type": "button",
      "label": "新增",
      "primary": true,
      "actionType": "dialog",
      "icon": "fa fa-plus pull-left",
      "dialog": {
        "title": "新增",
        "body": {
          "type": "form",
          "name": "user-edit-form",
          "api": "post:/api/user/regist",
          "body": [
            {
              "label": "用户名",
              "type": "input-text",
              "name": "user_name"
            },
            {
              "label": "密码",
              "type": "input-password",
              "name": "user_pass"
            },
            {
              "label": "确认密码",
              "type": "input-password",
              "name": "user_pass2"
            },
            {
              "label": "Email",
              "type": "input-email",
              "placeholder": "请输入邮箱地址",
              "name": "user_email"
            }
          ]
        }
      }
    }
  ],
  "body": [
    {
      "type": "crud",
      "name": "sample",
      "draggable": true,
      "perPage": 15,
      "keepItemSelectionOnPageChange": true,
      "maxKeepItemSelectionLength": 11,
      "api": "/api/user/list",
      "bulkActions": [
        {
          "label": "批量修改",
          "type": "button",
          "actionType": "dialog",
          "level": "primary",
          "dialog": {
            "title": "批量编辑",
            "name": "sample-bulk-edit",
            "body": {
              "type": "form",
              "api": "/api/user/batch_edit",
              "controls": [
                {
                  "name": "ids",
                  "type": "hidden"
                },
                {
                          "name": "ext_role",
                          "id": "ext_role",
                          "label": "分组/角色",
                          "mode": "row",
                          "type": "chained-select",

                          "source": "/api/role/chainedOptions?parentId=$parentId&level=$level&maxLevel=4"
                        }
              ]
            }
          }
        },
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": "/api/user/batch_edit",
          "confirmText": "确定要批量删除?"
        }
      ],
      "headerToolbar": [
        "bulkActions",
        {
          "type": "tpl",
          "tpl": "当前有 ${count} 条数据。",
          "className": "v-middle"
        },
        {
          "type": "columns-toggler",
          "align": "right"
        },
        {
          "type": "drag-toggler",
          "align": "right"
        },
        {
          "type": "pagination",
          "align": "right"
        }
      ],
      "footerToolbar": [
        "statistics",
        "switch-per-page",
        "pagination"
      ],
      "columns": [
        {
          "name": "user_name",
          "label": "用户名",
          "type": "text"
        },
        {
          "name": "user_email",
          "label": "邮箱",
          "type": "text"
        },
        {
          "name": "time_create",
          "type": "date",
          "label": "注册时间"
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "type": "button",
                  "label": "查看",
                  "level": "primary",
                  "icon": "fa fa-eye",
                  "actionType": "dialog",
                  "tooltip": "查看",
                  "dialog": {
                    "title": "查看",
                    "body": {
                      "type": "form",
                      "body": [
                        {
                          "name": "uid",
                          "label": "uid",
                          "type": "static"
                        },
                        {
                          "name": "user_name",
                          "label": "用户名",
                          "type": "static"
                        },
                        {
                          "name": "user_email",
                          "label": "邮箱",
                          "type": "static"
                        },
                        {
                          "name": "time_create",
                          "type": "date",
                          "label": "注册时间"
                        },
                        {
                          "name": "extinfo",
                          "type": "json",
                          "label": "extinfo"
                        }
                      ]
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "修改用户角色",
                  "level": "info",
                  "icon": "fa fa-pencil",
                  "tooltip": "修改用户角色",
                  "actionType": "drawer",
                  "drawer": {
                    "position": "left",
                    "size": "lg",
                    "title": "修改用户角色",
                    "body": {
                      "type": "form",
                      "name": "user-edit-form",
                      "api": "/api/user/_edit/${uid}",
                      "body": [
                        {
                          "type": "hidden",
                          "name": "uid"
                        },
                        {
                          "label": "用户名",
                          "type": "static",
                          "name": "user_name"
                        },


                        {
                          "name": "ext_role",
                          "id": "ext_role",
                          "label": "分组/角色",
                          "mode": "row",
                          "type": "chained-select",
                          "source": "/api/role/chainedOptions?parentId=$parentId&level=$level&maxLevel=4"
                        }
                      ]
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "删除",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "/api/user/_delete/$uid"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
