{
  "type": "page",
  "title": "权限列表",
  "remark": null,
  "name": "page-demo",
  "toolbar": [
    {
      "type": "button",
      "label": "新增",
      "primary": true,
      "actionType": "dialog",
      "icon": "fa fa-plus pull-left",
      "dialog": {
        "title": "新增",
        "body": {
          "type": "form",
          "name": "permission-edit-form",
          "api": "post:/api/permission/_add",
          "body": [
            {
              "name": "name",
              "label": "权限名称",
              "type": "input-text"
            },
            {
              "name": "action",
              "label": "允许动作",
              "type": "input-text"
            },
            {
              "name": "controller",
              "type": "input-text",
              "label": "控制器"
            }
          ]
        }
      }
    }
  ],
  "body": [
    {
      "type": "crud",
      "name": "sample",
      "draggable": true,
      "perPage": 15,
      "keepItemSelectionOnPageChange": true,
      "maxKeepItemSelectionLength": 11,
      "api": "/api/permission/list",
      "bulkActions": [
        {
          "label": "批量修改",
          "type": "button",
          "actionType": "dialog",
          "level": "primary",
          "dialog": {
            "title": "批量编辑",
            "name": "sample-bulk-edit",
            "body": {
              "type": "form",
              "api": "/api/permission/batch_edit",
              "controls": [
                {
                  "type": "text",
                  "name": "engine",
                  "label": "Engine"
                }
              ]
            }
          }
        },
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": "/api/permission/batch_edit",
          "confirmText": "确定要批量删除?"
        }
      ],
      "headerToolbar": [
        "bulkActions",
        {
          "type": "tpl",
          "tpl": "当前有 ${count} 条数据。",
          "className": "v-middle"
        },
        {
          "type": "columns-toggler",
          "align": "right"
        },
        {
          "type": "drag-toggler",
          "align": "right"
        },
        {
          "type": "pagination",
          "align": "right"
        }
      ],
      "footerToolbar": [
        "statistics",
        "switch-per-page",
        "pagination"
      ],
      "columns": [
        {
          "name": "uid",
          "label": "uid",
          "type": "text"
        },
        {
          "name": "name",
          "label": "权限名称",
          "type": "text"
        },
        {
          "name": "action",
          "label": "允许动作",
          "type": "text"
        },
        {
          "name": "controller",
          "label": "控制器",
          "type": "text"
        },
        {
          "type": "operation",
          "label": "操作",
          "width": "",
          "buttons": [
            {
              "type": "button-group",
              "buttons": [
                {
                  "type": "button",
                  "label": "查看",
                  "level": "primary",
                  "icon": "fa fa-eye",
                  "actionType": "dialog",
                  "tooltip": "查看",
                  "dialog": {
                    "title": "查看",
                    "body": {
                      "type": "form",
                      "body": [
                        {
                          "name": "uid",
                          "label": "uid",
                          "type": "static"
                        },
                        {
                          "name": "name",
                          "label": "权限名称",
                          "type": "static"
                        },
                        {
                          "name": "action",
                          "label": "允许动作",
                          "type": "static"
                        },
                        {
                          "name": "controller",
                          "label": "控制器",
                          "type": "static"
                        }
                      ]
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "修改",
                  "level": "info",
                  "icon": "fa fa-pencil",
                  "tooltip": "编辑",
                  "actionType": "drawer",
                  "drawer": {
                    "position": "left",
                    "size": "lg",
                    "title": "编辑",
                    "body": {
                      "type": "form",
                      "name": "permission-edit-form",
                      "api": "/api/permission/_edit/${uid}",
                      "body": [
                        {
                          "name": "name",
                          "label": "权限名称",
                          "type": "input-text"
                        },
                        {
                          "name": "action",
                          "label": "允许动作",
                          "type": "input-text"
                        },
                        {
                          "name": "controller",
                          "label": "控制器",
                          "type": "input-text"
                        }
                      ]
                    }
                  }
                },
                {
                  "type": "button",
                  "label": "删除",
                  "level": "danger",
                  "actionType": "ajax",
                  "confirmText": "您确认要删除?",
                  "api": "/api/permission/_delete/$uid"
                }
              ]
            }
          ],
          "placeholder": "-",
          "fixed": "right"
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "tableClassName": "table-db table-striped",
      "headerClassName": "crud-table-header",
      "footerClassName": "crud-table-footer",
      "toolbarClassName": "crud-table-toolbar",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
